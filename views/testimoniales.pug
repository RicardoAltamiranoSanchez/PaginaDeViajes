extends layout/index.pug 
//- comentario mandamos a llamar el block extends yla dirrecion cuidado con las tabulaciones se pone tabulacion o espacios pero no los dos al mismo tiempo
block contenido
	main.container.mt-5 
		h1.text-center.mt-5 #{pagina}
		blockquote.text-center Lee sobre nuestros clientes y sus experiencias 
		include layout/TestimonialesBlock.pug
	




		div.row 	
			div.col-md-12
				h2.d-block.w-100.text-center Agrega un Testimonio 
				if(errores)
					each error in errores
						div.alert.col.alert-danger.text-center=error.mensaje




				div.row.justify-content-center.col
					div.col-md-8 	
						form(action="/Testimoniales" method="POST")
							div.form-group 
								label(for="nombre" ) Nombre 
								input#nombre(type="text",placeholder="Tu nombre",name="nombre",class="form-control",value=nombre)
							div.form-group
								label(for="correo" ) Correo Electronico 
								input#correo(type="text", placeholder="Tu correo", name="correo" class="form-control",value=correo)
							div.form-group 	
								label(for="mensaje") Mensaje
								textarea#mensaje(class="form-control",name="mensaje",placeholder="Tu mensaje",row=3)=mensaje
							input.btn.btn-success.btn-block(type="submit")
